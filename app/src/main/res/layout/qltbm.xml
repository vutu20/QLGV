<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Quản lý tổ bộ môn"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/edttimkiemtbm"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="20"
            android:gravity="center"
            android:hint="Tìm kiếm"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/ibttimkiemtbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="TimKiemtbm"
            app:srcCompat="@drawable/icon_tk" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imagebtthemtbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="@drawable/icon_them"
            android:onClick="nhapthongtintbm" />

        <ImageButton
            android:id="@+id/imagebtsuatbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:background="@drawable/icon_update"
            android:onClick="capnhapthongtintbm" />

        <ImageButton
            android:id="@+id/imagebtxoatbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_xoa"
            android:onClick="xoathongtintbm" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="73dp"
            android:text="Thêm" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Xóa" />
    </TableRow>

    <ListView
        android:id="@+id/lvdanhsachtbm"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>